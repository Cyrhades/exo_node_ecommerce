extends ../layout.pug

block content 
    .container.mt-5
        .row.justify-content-center
            .col-md-6
                h1 Connexion
                if error
                    .alert.alert-danger #{error}
                form(action="/connexion" method="post")        
                    .form-group
                        label(for='email') Email :
                        input.form-control(type='email', name="email", id='email', value=user.email ,placeholder='Votre email')

                    .form-group
                        label(for='password') Mot de passe :
                        input.form-control(type='password', name="password", id='password', placeholder='Votre mot de passe')

                    button.btn.btn-primary.mt-20(type='submit') Se connecter